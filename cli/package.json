{
  "name": "@lpfreelance/electron-bridge-cli",
  "version": "1.0.0",
  "description": "Tool used to quickly generate bridges for Electron application using schemas.",
  "author": "Louis Poirier",
  "license": "MIT",
  "private": true,
  "bugs": "https://github.com/poirierlouis/electron-bridge/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/poirierlouis/electron-bridge.git",
    "directory": "cli"
  },
  "keywords": [
    "electron",
    "bridge",
    "cli",
    "schema",
    "generator",
    "parser"
  ],
  "main": "index.ts",
  "typings": "index.d.ts",
  "scripts": {
    "postinstall": "npm run test",
    "pretest": "npm run clean",
    "test": "jest",
    "coverage": "jest --coverage=true",
    "clean": "shx rm -rf dist/",
    "build": "npm run clean && tsc",
    "build:prod": "npm run clean && tsc && node minify.js",
    "pack": "node pack.js && npm pack ./dist/"
  },
  "bin": {
    "eb": "./cli.js"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "ts-morph": "^12.0.0",
    "yargs": "^17.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-typescript": "^7.15.0",
    "@node-minify/core": "^6.2.0",
    "@node-minify/uglify-es": "^6.2.0",
    "@types/jest": "^27.0.2",
    "@types/yargs": "^17.0.3",
    "babel-jest": "^27.2.4",
    "glob": "^7.2.0",
    "glob-promise": "^4.2.0",
    "jest": "^27.2.4",
    "shx": "^0.3.3",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  }
}
