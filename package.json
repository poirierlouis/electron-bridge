{
  "name": "electron-bridge",
  "version": "1.0.0",
  "description": "Safely expose main process modules of Electron to renderer process through IPC.",
  "author": "Louis Poirier",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/poirierlouis/electron-bridge/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/poirierlouis/electron-bridge.git"
  },
  "keywords": [
    "electron",
    "ipc",
    "renderer",
    "main",
    "process",
    "bridge",
    "context",
    "isolation",
    "sandbox",
    "secure"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
